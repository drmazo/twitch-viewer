<Window x:Class="Twitch_Viewer.StreamOptions" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twitch_Viewer"
        mc:Ignorable="d"
        Title="Stream Options" Height="170" Width="300">
    <StackPanel>
        <StackPanel Margin="0,30,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Edge of stream delay: "></Label>
            <ComboBox IsEditable="True" x:Name="eosdelay" Width="50" Height="20" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Margin="0,0,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Download segments:  "></Label>
            <ComboBox IsEditable="True" x:Name="dsegments" Width="50" Height="20" />
        </StackPanel>
        <Button x:Name="streamoptionsave" Content="Enregistrer" Width="80" Margin="0,10,0,0" Click="streamoptionsave_Click"/>
    </StackPanel>
</Window>
